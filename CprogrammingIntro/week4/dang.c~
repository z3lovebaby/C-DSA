#include<stdio.h>
#define PI 3.142
int main(){
  double r,s,p,S,V;
  s=PI*r*r;
  p=2.0*PI*r;
  S=4.0*PI*r*r;
  V=(4.0/3.0)*PI*r*r*r;

  printf("Input the radius= ");
  scanf("%lf%*c",&r);
  printf("%lf\n",r);

  printf("%.2lf\n",s);
  printf("%.2lf\n",p);
  printf("%.2lf\n",S);
  printf("%.2lf\n",V);


}
