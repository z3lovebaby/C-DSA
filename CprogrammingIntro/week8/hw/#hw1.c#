#include<stdio.h>
#include<math.h>
int main(){
  int i,j,k,n,choice,count;
  i=1;            
  j=1;            
  k=1;      
  do{
    printf("\t\tLet choose your numbers and get these services\n");
    printf("\t\t1.Input the number N\n");
    printf("\t\t2.List the perfect numbers from 1 to N\n");
    printf("\t\t3.List the prime numbers from 1 to N\n");
    printf("\t\t4.List the divisors of N\n");
    printf("\t\t5.Exit the program\n");

    printf("\nSo, your choice is: ");
    scanf("%d",&choice);
    switch(choice){
    case 1:
      printf("Input the upper limit of perfect numbers that you want find out: ");
      scanf("%d%*c",&n);
      break;

    case 2:
      printf("The perfect numbers are:\n");
      count=0;
      i=1;
      while(i<=n){
	int d,t;
	t=0;
	for (d=1;d<i;d++){
	  if(i%d==0){
	    t+=d;}
	}
	if(t==i){
	  printf("%d ",i);
	  count++;
	  if(count%10==0) {
	  printf("\n");
	  }
	}
	i++;
	
      }
      printf("\n");
      break;

    case 3:
      printf("The primes from 1 to N:\n");
      count=0;
      int i,dem,m;
      for (m=2;m<n;m++){
    dem=0;
    for (i=1;i<=sqrt(m);i++)
      {
	if (m % i ==0) dem=dem+1;
      }
    if (dem==1) {
      printf("%5d",m);
      count++;
    if(count%10==0) {
	  printf("\n");
	  }}
        }
  printf("\n");
      break;

    case 4:
      printf("The divisors of N are:\n");
      count=0;
      k=1;
      while(k<=n){
	if(n%k==0){
	  printf("%5d",k);
	  count++;
	  if (count%10==0) {
      printf("\n");
     }

	}
	k++;
      }
      printf("\n");
      break;

    case 5:
      printf("Goodbye !!!!\n");
      break;
    default:
      printf("Your input is error!!\n");
      break;
    }
  }
  while(choice!=5);
  printf("Thank you for use our services!!!\n");
}
